{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">

		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">

				<h1 class="article-h1 text-3xl underline text-slate-600">{{post.title}}</h1>
				<div class="article-body">
					{{post.content}}
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}