{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig">
		{{ function('wp_body_open') }}
		<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
		<header class="header" >
			{% block header %}
				<div class="wrapper">
					<div class="container mx-auto px-4 bg-slate-700">
						<div class="flex bg-slate-700">
							<div class="flex-1">
								<h1 class="hdr-logo text-blue-600" role="banner">
									<a class="hdr-logo-link text-3xl" href="{{site.url}}" rel="home">{{site.name}}</a>
								</h1>
							</div>

							<div class="flex-1">
								<nav id="nav-main" class="nav-main" role="navigation">
									{% include "menu.twig" with {'items': menu.get_items} %}
								</nav><!-- #nav -->
							</div>
							<div class="flex-1">
								Item 3
							</div>
						</div>
					</div>




				</div>
			{% endblock %}
		</header>

		<section id="content" role="main" class="content-wrapper">
			{% if title %}<h1>{{title}}</h1>{% endif %}
			<div class="wrapper">

				{% block content %}
					Sorry, no content
				{% endblock %}
			</div>
			{% if sidebar %}
				<aside class="layout-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}
		</section>

		{% block footer %}
			<footer id="footer">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
