{% if posts.pagination.pages is not empty %}
    <nav class="pagination-block flex justify-center items-center my-8">
        <ul class="pagination flex list-none gap-2">

            {# First #}
            {% if posts.pagination.pages|first and posts.pagination.pages|first.current != true %}
                <li class="flex items-center">
                    <a href="{{ posts.pagination.pages|first.link }}" class="btn px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-md">
                        First
                    </a>
                </li>
            {% else %}
                <li class="flex items-center">
                    <button disabled class="btn px-4 py-2 bg-gray-300 text-white rounded-md cursor-not-allowed">
                        First
                    </button>
                </li>
            {% endif %}

            {# Previous #}
            {% if posts.pagination.prev %}
                <li class="flex items-center">
                    <a href="{{ posts.pagination.prev.link }}" class="btn px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-md">
                        Previous
                    </a>
                </li>
            {% else %}
                <li class="flex items-center">
                    <button disabled class="btn px-4 py-2 bg-gray-300 text-white rounded-md cursor-not-allowed">
                        Previous
                    </button>
                </li>
            {% endif %}

            {# Pages #}
            {% for page in posts.pagination.pages %}
                {% if page.link %}
                    <li class="flex items-center">
                        <a href="{{ page.link }}" class="btn px-3 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-md">
                            {{ page.title }}
                        </a>
                    </li>
                {% else %}
                    <li class="flex items-center">
                        <span class="btn px-3 py-2 bg-gray-500 text-white rounded-md">
                            {{ page.title }}
                        </span>
                    </li>
                {% endif %}
            {% endfor %}

            {# Next #}
            {% if posts.pagination.next %}
                <li class="flex items-center">
                    <a href="{{ posts.pagination.next.link }}" class="btn px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-md">
                        Next
                    </a>
                </li>
            {% else %}
                <li class="flex items-center">
                    <button disabled class="btn px-4 py-2 bg-gray-300 text-white rounded-md cursor-not-allowed">
                        Next
                    </button>
                </li>
            {% endif %}

            {# Last #}
            {% if posts.pagination.pages|last and posts.pagination.pages|last.current != true %}
                <li class="flex items-center">
                    <a href="{{ posts.pagination.pages|last.link }}" class="btn px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-md">
                        Last
                    </a>
                </li>
            {% else %}
                <li class="flex items-center">
                    <button disabled class="btn px-4 py-2 bg-gray-300 text-white rounded-md cursor-not-allowed">
                        Last
                    </button>
                </li>
            {% endif %}

        </ul>
    </nav>
{% endif %}
